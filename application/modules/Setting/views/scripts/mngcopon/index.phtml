<script>
    function deletemodal() {
        if ($(':radio[name="choicedcopon"]').is(':checked')) {
 
            bootbox.confirm({
                message: "  برای حذف مطمئن هستید؟", locale: 'fa', callback: function (result) {
                    if (result) {
                        $.ajax({
                            url: "/Setting/Mngcopon/deletecopon",
                            method: "POST",
                            data: {'<?php
                  $detailinputname = array ('name' => "ID_COPON", 'title' => "انتخاب کوپن", 'required' => 1,'encrypt' => 1);
                 echo base64_encode(Application_Model_Func_Crypt::Encrypt(json_encode($detailinputname)));
                ?>': $(':radio[name="choicedcopon"]:checked').val() },
                        })
                            .done(function (res) {
                                var result=JSON.parse(res);
                                if(result.flag){
                                    toastr.success(result.msg, "عملیات حذف مشخصات کوپنی", { timeOut: 10000 });
                                    var table = $('#coponTbl').DataTable().ajax.reload();
                                }
                                else{
                                    toastr.error(result.msg, "عملیات حذف مشخصات کوپنی", { timeOut: 10000 });
                                }                       

                            });
                    }
                }
            });

        }
        else {
            bootbox.alert({ message: 'کوپن مورد نظر برای حذف را انتخاب کنید', locale: 'fa' });
        }
    }
    $(document).ready(function () {
        $('.datatbl').DataTable(
            {
                "language":
                {
                    url: '/dist/fa.json',
                },
                processing: true,
                serverSide: true,
                autowidth: false,
                columns: [
                    { "width": "80px" },
                    { "width": "80px" },
                    null, null, null, null, null
                ],
                ajax: '<?php echo $this->baseUrl() ?>/Setting/Mngcopon/getcoponlist',
                paging: true,
                lengthMenu: [[5, 10, 20, -1], [5, 10, 20, 'همه']],
            });
        $('#addCoponModal').on('show.bs.modal', function () {
            GetContent('<?php echo $this->baseUrl() ?>/Setting/Mngcopon/Addcopon', '#contentModal');

        });
        $('#editCoponModal').on('show.bs.modal', function (e) {
            if ($(':radio[name="choicedcopon"]').is(":checked")) {
                GetContent('<?php echo $this->baseUrl() ?>/Setting/Mngcopon/editcopon', '#contentModalEdit',
                 {'<?php
                  $detailinputname = array ('name' => "ID_COPON", 'title' => "انتخاب کوپن", 'required' => 1,'encrypt' => 1);
                 echo base64_encode(Application_Model_Func_Crypt::Encrypt(json_encode($detailinputname)));
                ?>': $(':radio[name="choicedcopon"]:checked').val()
                 }
                );
            }
            else {
                $('#contentModalEdit').html('<span class="alert alert-warning">کوپن مورد نظر برای ویرایش را انتخاب کنید</span>');
            }

        });

    });
</script>