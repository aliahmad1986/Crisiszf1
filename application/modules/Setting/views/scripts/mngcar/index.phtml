<script>
    function deletemodal() {
        if ($(':radio[name="choicedcar"]').is(':checked')) {
 
            bootbox.confirm({
                message: "  برای حذف مطمئن هستید؟", locale: 'fa', callback: function (result) {
                    if (result) {
                        $.ajax({
                            url: "/Setting/Mngcar/deletecar",
                            method: "POST",
                            data: {'<?php
                  $detailinputname = array ('name' => "ID_CARGROUP", 'title' => "انتخاب گروه خودرو", 'required' => 1,'encrypt' => 1);
                 echo base64_encode(Application_Model_Func_Crypt::Encrypt(json_encode($detailinputname)));
                ?>': $(':radio[name="choicedcar"]:checked').val() },
                        })
                            .done(function (res) {
                                var result=JSON.parse(res);
                                if(result.flag){
                                    toastr.success(result.msg, "عملیات حذف مشخصات گروه خودروی", { timeOut: 10000 });
                                    var table = $('#carTbl').DataTable().ajax.reload();
                                }
                                else{
                                    toastr.error(result.msg, "عملیات حذف مشخصات گروه خودروی", { timeOut: 10000 });
                                }                       

                            });
                    }
                }
            });

        }
        else {
            bootbox.alert({ message: 'گروه خودرو مورد نظر برای حذف را انتخاب کنید', locale: 'fa' });
        }
    }
    $(document).ready(function () {
        $('.datatbl').DataTable(
            {
                "language":
