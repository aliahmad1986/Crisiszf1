                autowidth: false,
                columns: [
                    { "width": "80px" },
                    { "width": "80px" },
                    { "width": "80px" }, null, null, null,null
                ],
                ajax: '<?php echo $this->baseUrl() ?>/Setting/Mngcar/getcarlist',
                paging: true,
                lengthMenu: [[5, 10, 20, -1], [5, 10, 20, 'همه']],
            });
        $('#addCarModal').on('show.bs.modal', function () {
            GetContent('<?php echo $this->baseUrl() ?>/Setting/Mngcar/Addcar', '#contentModal');

        });
        $('#editCarModal').on('show.bs.modal', function (e) {
            if ($(':radio[name="choicedcar"]').is(":checked")) {
                GetContent('<?php echo $this->baseUrl() ?>/Setting/Mngcar/editcar', '#contentModalEdit',
                 {'<?php
                  $detailinputname = array ('name' => "ID_CARGROUP", 'title' => "انتخاب گروه خودرو", 'required' => 1,'encrypt' => 1);
                 echo base64_encode(Application_Model_Func_Crypt::Encrypt(json_encode($detailinputname)));
                ?>': $(':radio[name="choicedcar"]:checked').val()
                 }
                );
            }
            else {
                $('#contentModalEdit').html('<span class="alert alert-warning">گروه خودرو مورد نظر برای ویرایش را انتخاب کنید</span>');
            }

        });

    });
</script>