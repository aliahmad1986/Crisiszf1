                                var result=JSON.parse(res);
                                if(result.flag){
                                    toastr.success(result.msg, "عملیات حذف کاربر", { timeOut: 10000 });
                                    var table = $('#userTbl').DataTable().ajax.reload();
                                }
                                else{
                                    toastr.error(result.msg, "عملیات حذف کاربر", { timeOut: 10000 });
                                }                       

                            });
                    }
                }
            });

        }
        else {
            bootbox.alert({ message: 'کاربر مورد نظر برای حذف را انتخاب کنید', locale: 'fa' });
        }
    }
 
