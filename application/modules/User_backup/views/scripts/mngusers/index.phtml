        function deletemodal() {
        if ($(':radio[name="choiceduser"]').is(':checked')) {
 
            bootbox.confirm({
                message: "  برای حذف مطمئن هستید؟", locale: 'fa', callback: function (result) {
                    if (result) {
                        $.ajax({
                            url: "/User/Mngusers/deleteuser",
                            method: "POST",
                            data: {'<?php
                  $detailinputname = array ('name' => "ID_USER", 'title' => "انتخاب کاربر", 'required' => 1,'encrypt' => 1);
                 echo base64_encode(Application_Model_Func_Crypt::Encrypt(json_encode($detailinputname)));
                ?>': $(':radio[name="choiceduser"]:checked').val() },
                        })
