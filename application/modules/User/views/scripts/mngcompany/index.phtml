                    url: '/dist/fa.json',
                },
                processing: true,
                serverSide: true,
                autowidth: false,
                columns: [
                    { "width": "80px" },
                    { "width": "80px" },
                    null, null, null, 
                ],
                ajax: {
                    url:'<?php echo $this->baseUrl() ?>/User/Mngcompany/getcompanylist',
                    error:function(xhr,error,thrown){
                                    toastr.error('خطا در دریافت اطلاعات پیش آمده است لطفا با پشتیبانی تماس بگیرید.', 'خطا در سمت سرور', { timeOut: 50000 });
                            }
                        },
                paging: true,
                lengthMenu: [[5, 10, 20, -1], [5, 10, 20, 'همه']],
            });
        $('#addCompanyModal').on('show.bs.modal', function () {
            GetContent('<?php echo $this->baseUrl() ?>/User/Mngcompany/Addcompany', '#contentModal');

        });
        $('#editCompanyModal').on('show.bs.modal', function (e) {
            if ($(':radio[name="choicedcompany"]').is(":checked")) {
                GetContent('<?php echo $this->baseUrl() ?>/User/Mngcompany/editcompany', '#contentModalEdit',
                 {'<?php
                  $detailinputname = array ('name' => "ID_COMPANY", 'title' => "انتخاب شرکت", 'required' => 1,'encrypt' => 1);
                 echo base64_encode(Application_Model_Func_Crypt::Encrypt(json_encode($detailinputname)));
                ?>': $(':radio[name="choicedcompany"]:checked').val()
                 }
                );
            }
            else {
                $('#contentModalEdit').html('<span class="alert alert-warning">شرکت مورد نظر برای ویرایش را انتخاب کنید</span>');
            }

        });

    });
</script>